<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/page">


    <ScrollView
        android:layout_width="405dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:scrollbarStyle="outsideInset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView112"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apparatus:"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textView113"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Converging lens, screen, lamp-box with crosswire, metre stick, retort stand. "
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/textView112" />

            <TextView
                android:id="@+id/textView114"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Procedure:"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="30sp"
                app:layout_constraintTop_toBottomOf="@+id/textView113" />

            <TextView
                android:id="@+id/textView115"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Focus the image of a distant object onto a screen."
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/textView114" />

            <TextView
                android:id="@+id/textView116"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. Measure the distance between the lens and the screen.
This corresponds to an approximate value for the focal length of the lens."
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/textView115" />

            <TextView
                android:id="@+id/textView117"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. Place the ray-box well outside the approximate focal length. "
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/textView116" />

            <TextView
                android:id="@+id/textView118"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4. Move the screen until a clear inverted image of the crosswire is obtained. "
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/textView117" />

            <TextView
                android:id="@+id/textView119"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5. Measure the distance u from the crosswire to the lens, using the metre stick. "
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/textView118" />

            <TextView
                android:id="@+id/textView120"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6. Measure the distance v from the screen to the lens. "
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/textView119" />

            <TextView
                android:id="@+id/textView121"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="7. Repeat this procedure for different values of u. "
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/textView120" />

            <TextView
                android:id="@+id/textView122"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="8. Calculate the focal length of the lens each time using the formula 1/f = 1/u + 1/v ,and get an average."
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/textView121" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>