<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    tools:context=".Length_Area_page">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:scrollbarStyle="outsideInset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/textbox"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView62"
                    style="@style/FAtitleBar"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"


                    android:text="Cylinder"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/Header" />

                <TextView
                    android:id="@+id/textView57"
                    style="@style/FAtextBox"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"


                    android:text="Area = 2*pi*r*JJJJ
    Volume = pi*h*r^2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toEndOf="@+id/cylinder_img"
                    app:layout_constraintTop_toBottomOf="@+id/Header" />

                <ImageView
                    android:id="@+id/cylinder_img"
                    android:layout_width="165dp"
                    android:layout_height="190dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    app:srcCompat="@drawable/cylinder"
                    android:padding="10dp"
                    android:scaleType="centerInside"
                    app:layout_constraintEnd_toStartOf="@+id/textView57"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toStartOf="parent"

                    app:layout_constraintTop_toBottomOf="@+id/Header" />

            </LinearLayout>

            <ImageView style="@style/FAfooter" />

            <LinearLayout
                android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/textbox"
            android:orientation="vertical">

                <TextView
                    android:id="@+id/textView63"
                    style="@style/FAtitleBar"

                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:text="Cone"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cylinder_img" />

                <TextView
                    android:id="@+id/textView64"
                    style="@style/FAtextBox"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:text="Area = pi*r*l \nVolume = (1/3)*pi*h*r^2"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView57" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="165dp"
                    android:layout_height="170dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView63"
                    app:srcCompat="@drawable/cone" />
            </LinearLayout>

            <ImageView style="@style/FAfooter" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/textbox"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView66"
                    style="@style/FAtitleBar"

                    android:layout_marginStart="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginRight="0dp"
                    android:text="Circle"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cylinder_img" />

                <TextView
                    android:id="@+id/textView67"
                    style="@style/FAtextBox"
                    android:layout_marginStart="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginRight="0dp"

                    android:text="Area = 4*pi*r^2 \nVolume = (4/3)*pi*r^3"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView57" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="165dp"
                    android:layout_height="170dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView63"
                    app:srcCompat="@drawable/sphere" />
            </LinearLayout>
            <ImageView style="@style/FAfooter" />

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>