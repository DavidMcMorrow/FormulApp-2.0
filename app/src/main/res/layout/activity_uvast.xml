<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:orientation="vertical"
    android:background="@drawable/formulapp_background">

    <TextView
        style = "@style/FAbody"
        android:id="@+id/info"
        android:text="-Use '-999' = value you want.\n-Use '-888' = value you don't have.\n"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        style="@style/FAbody"
        android:id="@+id/et_u"
        android:ems="10"
        android:hint="initial velocity 'u'"
        android:inputType="numberDecimal|numberSigned" />

    <EditText
        style="@style/FAbody"
        android:id="@+id/et_v"

        android:ems="10"
        android:hint="final velocity 'v'"
        android:inputType="numberDecimal|numberSigned" />

    <EditText
        style="@style/FAbody"
        android:id="@+id/et_a"
        android:ems="10"
        android:hint="acceleration 'a'"
        android:inputType="numberDecimal|numberSigned" />

    <EditText
        style="@style/FAbody"
        android:id="@+id/et_s"
        android:ems="10"
        android:hint="distance 's'"
        android:inputType="numberDecimal|numberSigned" />
    <EditText
        style="@style/FAbody"
        android:id="@+id/et_t"

        android:ems="10"
        android:hint="time 't'"
        android:inputType="numberDecimal|numberSigned" />

    <Button
        style= "@style/FAbutton"
        android:id="@+id/bt_go"

        android:text="SOLVE" />
    <Button
        style= "@style/FAbutton"
        android:id="@+id/clr"

        android:text="CLEAR" />

    <TextView
        style = "@style/FAbody"
        android:id="@+id/tv_result01"
        android:text=""
       />

    <TextView
        style = "@style/FAbody"
        android:id="@+id/tv_result02"

        android:text=""
        />
    <TextView
        style = "@style/FAbody"
        android:id="@+id/tv_result03"
        android:text=""
        />
</LinearLayout>