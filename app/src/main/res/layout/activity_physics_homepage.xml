<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".physics_homepage"
    android:background="@drawable/formulapp_background">


    <Button
        android:id="@+id/Physics_btn1"
        style="@style/FAbutton"
        android:layout_marginTop="32dp"
        android:text="Mechanics"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        style="@style/FAbutton"
        android:id="@+id/Physics_btn2"
        android:text="Electricity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Physics_btn1" />

    <Button
        style="@style/FAbutton"
        android:id="@+id/Physics_btn3"
        android:text="Light/Optics"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Physics_btn2" />

    <Button
        style="@style/FAbutton"
        android:id="@+id/Physics_btn4"
        android:text="UVAST Calculator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Physics_btn3" />

    <Button
        style="@style/FAbutton"
        android:id="@+id/Physics_btn5"
        android:text="Conservation of Momentum Experiment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Physics_btn4" />


    <Button
        style="@style/FAbutton"
        android:id="@+id/Physics_btn6"
        android:text="Lens Calculator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Physics_btn5" />


</android.support.constraint.ConstraintLayout>

