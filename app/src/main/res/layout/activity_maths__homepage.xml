<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/page"
tools:context=".Maths_Homepage">

<TextView
    android:id="@+id/Header"
    android:layout_width="296dp"
    android:layout_height="55dp"
    android:layout_marginStart="67dp"
    android:layout_marginLeft="67dp"
    android:layout_marginTop="28dp"
    android:layout_marginEnd="32dp"
    android:layout_marginRight="32dp"
    android:text="Maths"
    android:textColor="@color/colorPrimaryDark"
    android:textSize="30sp"
    android:textStyle="bold"
    android:typeface="serif"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="1.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />


<Button
    android:id="@+id/Trig_btn"
    android:layout_width="296dp"
    android:layout_height="60dp"
    android:layout_marginStart="67dp"
    android:layout_marginLeft="67dp"
    android:layout_marginTop="64dp"
    android:background="@null"
    android:text="Trigonmetry"
    android:textSize="18sp"
    android:typeface="serif"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/Header" />

<Button
    android:id="@+id/Physics_btn"
    android:layout_width="296dp"
    android:layout_height="60dp"
    android:layout_marginStart="67dp"
    android:layout_marginLeft="67dp"
    android:layout_marginTop="20dp"
    android:background="@null"
    android:text="Fundamental Physical Constraints"
    android:textSize="18sp"
    android:typeface="serif"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/Trig_btn" />

<Button
    android:id="@+id/LandA_btn"
    android:layout_width="296dp"
    android:layout_height="60dp"
    android:layout_marginStart="67dp"
    android:layout_marginLeft="67dp"
    android:layout_marginTop="20dp"
    android:background="@null"
    android:text="@string/surface_area_and_volume"
    android:textSize="18sp"
    android:typeface="serif"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/Physics_btn" />

<Button
    android:id="@+id/quadrix_btn"
    android:layout_width="296dp"
    android:layout_height="60dp"
    android:layout_marginStart="67dp"
    android:layout_marginLeft="67dp"
    android:layout_marginTop="20dp"
    android:layout_marginEnd="48dp"
    android:layout_marginRight="48dp"
    android:background="@null"
    android:text="@string/solve_equation"
    android:textSize="18sp"
    android:typeface="serif"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/LandA_btn" />

    <Button
        android:id="@+id/VandA_btn"
        android:layout_width="296dp"
        android:layout_height="60dp"
        android:layout_marginStart="67dp"
        android:layout_marginLeft="67dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="48dp"
        android:layout_marginRight="48dp"
        android:background="@null"
        android:text="Get Area and Volume"
        android:textSize="18sp"
        android:typeface="serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quadrix_btn" />

    <Button
        android:id="@+id/Maths_Ni"
        android:layout_width="296dp"
        android:layout_height="60dp"
        android:layout_marginStart="67dp"
        android:layout_marginLeft="67dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="48dp"
        android:layout_marginRight="48dp"
        android:background="@null"
        android:text="@string/maths_ni"
        android:onClick="goToNumericalIntegration"
        android:textSize="18sp"
        android:typeface="serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/VandA_btn"  />

</android.support.constraint.ConstraintLayout>