<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:orientation="vertical"
    android:background="@drawable/formulapp_background">

    <EditText
        style= "@style/FAbody"
        android:id="@+id/et_u2"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="distance between object and lens 'u'"
        android:inputType="numberDecimal|numberSigned" />

    <EditText
        style= "@style/FAbody"
        android:id="@+id/et_v2"

        android:ems="10"
        android:hint="distance between image and lens 'v'"
        android:inputType="numberDecimal|numberSigned" />

    <Button
        style= "@style/FAbutton"
        android:id="@+id/bt_go2"

        android:text="SOLVE" />

    <Button
        style= "@style/FAbutton"
        android:id="@+id/clr"

        android:text="CLEAR" />

    <TextView
        style= "@style/FAbody"
        android:id="@+id/result01"

        android:text=""
        />

    <TextView
        style= "@style/FAbody"
        android:id="@+id/result02"

        android:text=""
       />

    <TextView
        style= "@style/FAbody"
        android:id="@+id/result03"

        android:text=""
        />
</LinearLayout>