<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:orientation="vertical"
    android:background="@drawable/formulapp_background">

    <io.github.kexanie.library.MathView
        android:id="@+id/function2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="ax^2 + bx + c"
        app:layout_constraintTop_toBottomOf="@+id/show_function"
        ></io.github.kexanie.library.MathView>

    <EditText
        style = "@style/FAbody"
        android:id="@+id/et_a"
        android:layout_marginTop="64dp"
        android:ems="10"
        android:hint="a"
        android:inputType="numberDecimal|numberSigned"
        app:layout_constraintTop_toBottomOf="@+id/function2"/>

    <EditText
        style = "@style/FAbody"
        android:id="@+id/et_b"

        android:ems="10"
        android:hint="b"
        android:inputType="numberDecimal|numberSigned"
        app:layout_constraintTop_toBottomOf="@+id/et_a"/>

    <EditText
        style = "@style/FAbody"
        android:id="@+id/et_c"

        android:ems="10"
        android:hint="c"
        android:inputType="numberDecimal|numberSigned"
        app:layout_constraintTop_toBottomOf="@+id/et_b"/>

    <Button
        style = "@style/FAbutton"
        android:id="@+id/bt_go"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SOLVE"
        app:layout_constraintTop_toBottomOf="@+id/et_c"/>


        


    <TextView
        style ="@style/FAbody"
        android:id="@+id/tv_result"

        android:text=""
        android:textSize="24dp"
        app:layout_constraintTop_toBottomOf="@+id/bt_go"/>
</LinearLayout>